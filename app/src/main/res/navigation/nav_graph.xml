<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/lobbyFragment">

    <fragment
        android:id="@+id/lobbyFragment"
        android:name="com.nex0s.android.memorygame.LobbyFragment"
        android:label="fragment_lobby"
        tools:layout="@layout/fragment_lobby">
        <action
            android:id="@+id/action_lobbyFragment_to_gameplayFragment"
            app:destination="@id/gameplayFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameplayFragment"
        android:name="com.nex0s.android.memorygame.GameplayFragment"
        android:label="fragment_gameplay"
        tools:layout="@layout/fragment_gameplay">
        <argument
            android:name="size"
            android:defaultValue="SIZE_3x4"
            app:argType="com.nex0s.android.memorygame.model.Size" />
    </fragment>
</navigation>